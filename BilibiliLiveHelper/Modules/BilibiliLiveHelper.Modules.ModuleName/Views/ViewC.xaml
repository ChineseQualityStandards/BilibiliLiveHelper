<UserControl
    x:Class="BilibiliLiveHelper.Modules.ModuleName.Views.ViewC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:BilibiliLiveHelper.Core;assembly=BilibiliLiveHelper.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BilibiliLiveHelper.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5">
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
            <StackPanel>
                <TextBlock Text="城市" />
                <Image>
                    <Image.Source>
                        <DrawingImage Drawing="{StaticResource Sunny}" />
                    </Image.Source>
                </Image>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
