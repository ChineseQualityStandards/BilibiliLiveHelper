<UserControl
    x:Class="BilibiliLiveHelper.Modules.ModuleName.Views.ViewE"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:james="https://jamesnet.dev/xaml/presentation"
    xmlns:local="clr-namespace:BilibiliLiveHelper.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Margin="5">
        <StackPanel>
            <materialDesign:Card Margin="5" HorizontalAlignment="Center">
                <DockPanel Margin="5">
                    <TextBlock
                        Margin="10,10,0,10"
                        VerticalAlignment="Center"
                        Text="透明" />
                    <ToggleButton
                        Margin="10"
                        HorizontalAlignment="Center"
                        IsChecked="{Binding ToggleButton_Check}" />
                    <TextBlock
                        Margin="0,10,10,10"
                        VerticalAlignment="Center"
                        Text="绿幕" />
                </DockPanel>
            </materialDesign:Card>
        </StackPanel>

    </Border>
</UserControl>
